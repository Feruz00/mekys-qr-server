server {
    listen 80;
    client_max_body_size 100M;
    keepalive_timeout 100;
    sendfile on;

    location /api/ {
        proxy_pass http://127.0.0.1:3006;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
    location /uploads/ {
        proxy_pass http://127.0.0.1:3006;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
   
    location ~ ^/api/(video|stream)/ {
        proxy_pass http://127.0.0.1:3006;

        proxy_http_version 1.1;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Critical for Safari/iOS range requests
        proxy_set_header Range $http_range;
        proxy_set_header If-Range $http_if_range;
        proxy_force_ranges on;           # ‚Üê This is usually the missing piece!

        proxy_buffering off;
        proxy_request_buffering off;

        # Ensure client knows ranges are supported
        add_header Accept-Ranges bytes always;

        # Optional: prevent extra headers from upstream messing things up
        proxy_hide_header Cache-Control;
        proxy_hide_header Expires;
    }

    location / {
        alias /var/www/qrcode/client/dist/;
        try_files $uri $uri/ /index.html;
    }
}